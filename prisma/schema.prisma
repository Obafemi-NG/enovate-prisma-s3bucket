generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String
  role     String
}

model TeamMember {
  id       Int     @id @default(autoincrement())
  name     String
  position String
  imageUrl String
  bio      String?
}

model Project {
  id       Int      @id @default(autoincrement())
  title    String
  imageUrl String
  detail   String
  link     String
  tag      String[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String
  password String
}

model Author {
  id    Int        @id @default(autoincrement())
  name  String
  email String?
  posts BlogPost[]
}

model BlogPost {
  id            Int      @id @default(autoincrement())
  title         String
  authorId      Int
  coverImageUrl String
  content       String
  publishedDate DateTime
  author        Author   @relation(fields: [authorId], references: [id])
}
